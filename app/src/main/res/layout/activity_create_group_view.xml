<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateGroupView">

    <EditText
        android:id="@+id/txtGroupNameGroupView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="80sp"
        android:layout_marginEnd="145dp"
        android:ems="10"
        android:hint="Group Name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16sp"
        android:ems="10"
        android:hint="User Name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/txtGroupNameGroupView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtGroupNameGroupView"
        app:layout_constraintTop_toBottomOf="@+id/txtGroupNameGroupView" />

    <EditText
        android:id="@+id/txtMobileNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16sp"
        android:ems="10"
        android:hint="Mobile Number"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/txtUserName"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtUserName"
        app:layout_constraintTop_toBottomOf="@+id/txtUserName" />

    <Button
        android:id="@+id/btnAddGroupWithUser"
        android:layout_width="220dp"
        android:layout_height="45dp"
        android:layout_marginTop="44dp"
        android:text="Add "
        app:layout_constraintEnd_toEndOf="@+id/txtMobileNumber"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtMobileNumber"
        app:layout_constraintTop_toBottomOf="@+id/txtMobileNumber" />

    <Button
        android:id="@+id/contact_pick"
        android:layout_width="202dp"
        android:layout_height="49dp"
        android:layout_marginTop="24dp"
        android:text="From Contact"
        app:layout_constraintEnd_toEndOf="@+id/btnAddGroupWithUser"
        app:layout_constraintStart_toStartOf="@+id/btnAddGroupWithUser"
        app:layout_constraintTop_toBottomOf="@+id/btnAddGroupWithUser" />
</androidx.constraintlayout.widget.ConstraintLayout>